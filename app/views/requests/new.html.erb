<div class="row">
  <div class="large-12 columns">
    <h2>New Request</h2>
  </div>
</div>

<div class="row">
  <div class="large-6 large-centered columns">
    <div class="row collapse">
      <div class="small-10 columns">
        <%= text_field_tag :ticker_symbol, nil, placeholder: "Enter Ticker Symbol" %>
      </div>
      <div class="small-2 columns">
        <%= button_tag 'Search Equity', id: 'search_equity', class: 'button prefix' %>
      </div>
    </div>
  </div>
  <div class="large-6 large-centered columns" id="search_result">
    <h3 id="stock_name"></h3>
    <h3 id="last_price"></h3>
  </div>
</div>

div.row



<%= form_for @request do |f| %>
  Symbol: <%= f.text_field :symbol %>
  Quantity: <%= f.number_field :quantity %>
  Price: <%= f.number_field :price %>
  Message: <%= f.text_area :message %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :club_id, value: @club_id %>
  <%= f.submit  %>
<% end %>