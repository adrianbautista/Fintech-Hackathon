<h2>New Request</h2>

<%= form_tag search_requests_path, method: 'get', remote: true do %>
  <%= text_field_tag :ticker_symbol %>
  <%= submit_tag 'Search Equity', id: 'search_equity' %>
<% end %>

<%= form_for @request do |f| %>
  Symbol: <%= f.text_field :symbol %>
  Quantity: <%= f.number_field :quantity %>
  Price: <%= f.number_field :price %>
  Message: <%= f.text_area :message %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :club_id, value: @club_id %>
  <%= f.submit  %>
<% end %>