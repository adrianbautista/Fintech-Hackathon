<h2>New Request</h2>

<%= text_field_tag :ticker_symbol %>
<%= button_tag 'Search Equity', id: 'search_equity' %>


<%= form_for @request do |f| %>
  <%= f.text_field :symbol %>
  <%= f.number_field :quantity %>
  <%= f.number_field :price %>
  <%= f.text_area :message %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :club_id, value: @club_id %>
  <%= f.submit  %>
<% end %>